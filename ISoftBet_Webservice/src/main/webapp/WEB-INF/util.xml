<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- instantiation of properties file -->
	<bean id="labelsProperties" class="com.isoftbet.util.ISoftProperties" scope="singleton">
		<constructor-arg value="conf/locale/labels.properties" />		
	</bean>
	
	<bean id="configProperties" class="com.isoftbet.util.ISoftProperties" scope="singleton">
		<constructor-arg value="conf/locale/config.properties" />
	</bean>
</beans>
